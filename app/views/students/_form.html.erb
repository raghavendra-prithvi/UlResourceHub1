<div ng-app="UlResourceHub">
  <%= form_for @student, id: "studentForm", html: {name: "studentForm", "novalidate" => true} do |f| %>
    <% if @student.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

        <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group" ng-class="{ 'has-error': studentForm['student[first_name]'].$invalid}">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name, class: "form-control", "ng-model" => "first_name", required: true %>
      <span class="help-block" ng-show="studentFrom['student[first_name]'].$error.required"> Required </span>
    </div>
    <div class="form-group">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>
    <div class="form-group">
      <%= f.label :level %><br>
      <%= f.text_field :level %>
    </div>
    <div class="form-group">
      <%= f.label :major %><br>
      <%= f.text_field :major %>
    </div>
    <div class="form-group">
      <%= f.label :joining_semester %><br>
      <%= f.text_field :joining_semester %>
    </div>
    <%= f.submit "Save", class: "btn btn-primary", "ng-disabled" => "studentForm.$invalid"%>
  <% end %>
</div>  
