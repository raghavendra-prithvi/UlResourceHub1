<div ng-app="UlResourceHub" ng-controller="StudentsController" ng-init="urls=<%=@urls.to_json %>;getStudents()">
  <div class="row">
      <p id="notice"><%= notice %></p>
      <h3>Listing Students</h3>
          <div class="col s2">First name</div>
          <div class="col s2">Last name</div>
          <div class="col s2">Level</div>
          <div class="col s2">Major</div>
          <div class="col s2">Joining semester</div>
          <th colspan="3"></th>
  </div>        
  <div ng-repeat="student in students" class="row">
          <div class="col s2">  {{student.first_name }} </div>
          <div class="col s2">  {{ student.last_name }} </div>
          <div class="col s2">  {{ student.level }} </div>
          <div class="col s2">  {{ student.major }}</div>
          <div class="col s2">  {{ student.joining_semester }}</div>
  </div>
<br>
<%= link_to 'New Student', new_student_path %>

<div class="row">
  <div class="col s6">
    <form ng-submit="save()"> 
      <div class="form-group">
        <label>First Name</label>
        <input type="text" class="form-control" ng-model="student.first_name" /> 
      </div>
      <div class="form-group">
        <label>Last Name</label>
        <input type="text" class="form-control" ng-model="student.last_name" /> 
      </div>
      <div class="form-group">
        <label>Major</label>
        <input type="text" class="form-control" ng-model="student.major" /> 
      </div>
      <div class="form-group">
        <label>Level</label>
        <input type="text" class="form-control" ng-model="student.level" />
      </div>
        <button type="button" class="btn btn-primary" ng-click="">
          Save
        </button>
    </form>
  </div>
</div>  
</div>
